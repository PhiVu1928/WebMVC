@model BanVotMVC.Models.LoginUser
@{
    
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="col-md-12 col-lg-12 col-xl-12">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Đăng Nhập</h2>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="login-form align-items-center">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = " " })
                                @Html.TextBoxFor(model => model.Username)
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "    " })
                                @Html.TextBoxFor(model => model.Password, htmlAttributes: new { Type = "password" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <input type="submit" class="btn btn-default cart" value="Đăng nhập" />
                        </div>
                    </form>                   
                }
            </div>
        </div>
    </div>

