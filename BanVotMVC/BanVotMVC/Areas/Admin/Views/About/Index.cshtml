@model List<Model.EF.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    Thông tin giới thiệu
}
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Danh sách Slide</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered table-hover dataTable">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên Shop</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>#</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td><img src="@item.Image" style="width:110px;height:100px" /></td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                <a href="/Admin/About/Edit/@item.ID">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa người dùng này ?",
                               OnComplete = "$('row_" + @item.ID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>




